{% extends "index.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8" id="content">
                <div class="content">
                    <h1 id="header-settings">Ustawienia</h1>
                    <form action="/profile"  enctype="multipart/form-data" method="POST">
                        <div class="form-group">
                            <label for="exampleFormControlFile1" class="label-text">Zmień zdjęcie profilowe</label>
                            <input type="file" name="avatar" class="form-control-file" id="exampleFormControlFile1" accept="image/*">
                            <input type="submit" id="submit-button" value="Zapisz">
                        </div>
                    </form>
                    <form action="/profile"  method="POST">
                        <div class="form-group">
                            <label for="textedit" class="label-text">Zmień tekst profilowy</label>
                            <textarea name="description" id="textedit">{{ description }}</textarea>
                            <input type="submit" id="submit-button" value="Zapisz">
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <img class="img-fluid" src="res/dog.png">
            </div>
        </div>
    </div>

{% endblock %}